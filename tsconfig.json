{
  "compilerOptions": {
    "outDir": "./build",        // Diretório onde os arquivos compilados serão colocados
    "rootDir": "./src",         // Diretório raiz para os arquivos TypeScript
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
